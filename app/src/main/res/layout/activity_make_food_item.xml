<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/makefooditem_imgbtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/appleimg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/makefooditem_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/makefooditem_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:hint="Food's name"
        app:layout_constraintBottom_toTopOf="@+id/makefooditem_kalori"
        app:layout_constraintLeft_toRightOf="@+id/makefooditem_imgbtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/makefooditem_imgbtn"
        android:maxLines="1"
        />

    <EditText
        android:id="@+id/makefooditem_kalori"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Food's kalori"
        app:layout_constraintBottom_toBottomOf="@+id/makefooditem_imgbtn"
        app:layout_constraintLeft_toLeftOf="@+id/makefooditem_name"
        app:layout_constraintTop_toBottomOf="@+id/makefooditem_name"
        android:maxLines="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#578AA0"
        android:padding="15dp"
        android:text="Add your food item!"
        android:textColor="#fff"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/makefooditem_imgbtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/makefooditem_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/makefooditem_name" />
</androidx.constraintlayout.widget.ConstraintLayout>