<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MakeFoodItemActivity">


    <ImageButton
        android:id="@+id/makefooditem_imgbtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/makefooditem_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/appleimg"
        />


    <EditText
        android:id="@+id/makefooditem_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Food's name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/makefooditem_imgbtn"
        app:layout_constraintTop_toTopOf="@+id/makefooditem_imgbtn"
        app:layout_constraintBottom_toTopOf="@+id/makefooditem_kalori"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/makefooditem_kalori"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Food's kalori"
        app:layout_constraintBottom_toBottomOf="@+id/makefooditem_imgbtn"
        app:layout_constraintTop_toBottomOf="@+id/makefooditem_name"
        app:layout_constraintLeft_toLeftOf="@+id/makefooditem_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/makefooditem_imgbtn"
        android:text="Add your food item!"
        android:textColor="#fff"
        android:textSize="32sp"
        android:padding="15dp"
        android:background="#578AA0"
        />
    <Button
        android:id="@+id/makefooditem_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintRight_toRightOf="@+id/makefooditem_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        />



</android.support.constraint.ConstraintLayout>