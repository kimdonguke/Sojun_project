<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="15dp"
        android:id="@+id/fooditem_foodimg"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이잉기모링"
        app:layout_constraintTop_toTopOf="@+id/fooditem_foodimg"
        app:layout_constraintLeft_toRightOf="@+id/fooditem_foodimg"
        android:layout_marginLeft="10dp"
        android:textSize="23sp"
        android:textColor="#111"
        android:id="@+id/fooditem_foodname"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/fooditem_foodimg"
        app:layout_constraintTop_toBottomOf="@+id/fooditem_foodname"
        android:text="기모링 kcal"
        app:layout_constraintLeft_toLeftOf="@+id/fooditem_foodname"
        android:id="@+id/fooditem_kalori"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fooditem_howmuch"
        app:layout_constraintTop_toTopOf="@+id/fooditem_foodimg"
        app:layout_constraintBottom_toBottomOf="@+id/fooditem_foodimg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        android:text="5"
        android:textSize="35sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>