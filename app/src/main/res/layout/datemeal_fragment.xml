<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:text="meal when"
    android:gravity="center"
    android:textSize="25sp"
    android:textColor="#111"
    android:background="#E2E1E1"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/dateview_frag_mealwhen"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/dateview_frag_mealwhen"
        android:id="@+id/dateview_frag_daterecycler"
        ></androidx.recyclerview.widget.RecyclerView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:text="modify your sikdan"
        android:id="@+id/dateview_frag_addtestbtn"
        />
    <Button
        android:id="@+id/datemeal_morning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/dateview_frag_addtestbtn"
        app:layout_constraintLeft_toLeftOf="@+id/dateview_frag_addtestbtn"
        app:layout_constraintRight_toLeftOf="@+id/datemeal_lunch"
        android:text="아침"
        />
    <Button
        android:id="@+id/datemeal_lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/datemeal_morning"
        app:layout_constraintLeft_toRightOf="@+id/datemeal_morning"
        app:layout_constraintRight_toLeftOf="@+id/datemeal_dinner"
        android:text="점심"
        />
    <Button
        android:id="@+id/datemeal_dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/datemeal_lunch"
        app:layout_constraintRight_toRightOf="@+id/dateview_frag_addtestbtn"
        app:layout_constraintLeft_toRightOf="@+id/datemeal_lunch"
        android:text="저녁"
        />
</androidx.constraintlayout.widget.ConstraintLayout>